
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS
    // Allow anyone to create a user document (for seeding)
    // Signed-in users can read and write to their own document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if true; // Allows seeding
    }

    // BOOKS
    // Books and chapters are publicly readable.
    // Writes are only allowed during seeding (unauthenticated).
    match /books/{bookId} {
      allow get, list: if true;
      allow write: if request.auth == null;

      // CHAPTERS (subcollection of books)
      match /chapters/{chapterId} {
        allow get, list: if true;
        allow write: if request.auth == null;

        // DISCUSSION (subcollection of chapters)
        match /discussion/{postId} {
          allow read: if isSignedIn();
          allow create: if isSignedIn();
          allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
          allow write: if request.auth == null; // For seeding
        }
      }
    }

    // BOOK CLUBS
    // Allow reading clubs for any signed-in user.
    // Creation is allowed for signed-in users or during seeding.
    // Updates/deletes are restricted to the owner.
    match /bookClubs/{clubId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn() && (request.auth.uid in resource.data.memberIds || resource.data.ownerId == request.auth.uid);
      allow create: if isSignedIn() || request.auth == null;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // MEMBERS (subcollection of bookClubs)
      // Members can be read by other members.
      // Creation/deletion is handled by club joining logic or seeding.
      match /members/{userId} {
        allow read: if isSignedIn() && exists(/databases/$(database)/documents/bookClubs/$(clubId)/members/$(request.auth.uid));
        allow create, delete: if request.auth == null || isOwner(userId) || get(/databases/$(database)/documents/bookClubs/$(clubId)).data.ownerId == request.auth.uid;
      }
    }
    
    // USER NOTES
    // Users can only manage their own notes. Creation allowed for users or seeding.
    match /userNotes/{noteId} {
        allow read, update, delete: if isOwner(resource.data.userId);
        allow create: if isOwner(request.resource.data.userId) || request.auth == null;
    }
  }
}

    