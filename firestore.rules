
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS
    // Users can only read and write to their own document.
    // Allow seeding for now.
    match /users/{userId} {
      allow read, write: if isSignedIn() || request.auth == null;
    }

    // BOOKS
    // Books are publically readable but cannot be written to by clients, except for seeding.
    match /books/{bookId} {
      allow get, list: if true;
      allow write: if request.auth == null; // Allow seeding

      // CHAPTERS (subcollection of books)
      // Chapters are publically readable.
      match /chapters/{chapterId} {
        allow get, list: if true;
        allow write: if request.auth == null; // Allow seeding

        // DISCUSSION (subcollection of chapters)
        // Any signed-in user can read or create discussion posts.
        // Only the original author can update or delete their own post.
        match /discussion/{postId} {
          allow read, create: if isSignedIn();
          allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
          allow write: if request.auth == null; // Allow seeding
        }
      }
    }

    // BOOK CLUBS
    // Any signed in user can view club listings.
    // Club data can be read by any member of that club.
    // The club owner is the only one who can update or delete the club.
    // Any signed in user can create a club (and they are automatically the owner).
    match /bookClubs/{clubId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn() && request.auth.uid in resource.data.memberIds;
      allow create: if (isSignedIn() && request.resource.data.ownerId == request.auth.uid) || request.auth == null;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // MEMBERS (subcollection of bookClubs)
      // The member list can be read by any club member.
      // A user can add themselves as a member (join).
      // A user can remove themselves (leave), or the club owner can remove them.
      match /members/{userId} {
        allow read: if isSignedIn() && (exists(/databases/$(database)/documents/bookClubs/$(clubId)/members/$(request.auth.uid)) || isOwner(resource.data.ownerId));
        allow create: if isOwner(userId) || request.auth == null;
        allow delete: if isOwner(userId) || isOwner(get(/databases/$(database)/documents/bookClubs/$(clubId)).data.ownerId);
      }
    }
    
    // USER NOTES
    // Users can only create, read, update, or delete their own notes.
    match /userNotes/{noteId} {
        allow read, write: if isSignedIn() && request.auth.uid == resource.data.userId;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
  }
}
